    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/vibe_coding_bible_app/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  name          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  favorites     Favorite[]
  collections   Collection[]
  customPrompts CustomPrompt[]
  usageStats    UsageStats[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  promptId  String   // ID from the Excel/JSON data
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, promptId])
  @@index([userId])
}

model Collection {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  color       String?  // For visual organization
  icon        String?  // Emoji or icon name
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user          User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  promptItems   CollectionPrompt[]
  
  @@index([userId])
}

model CollectionPrompt {
  id           String   @id @default(cuid())
  collectionId String
  promptId     String   // ID from Excel/JSON or custom prompt ID
  isCustom     Boolean  @default(false) // true if it's a custom prompt
  order        Int      @default(0)
  addedAt      DateTime @default(now())
  
  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  
  @@unique([collectionId, promptId])
  @@index([collectionId])
}

model CustomPrompt {
  id          String   @id @default(cuid())
  userId      String
  title       String
  prompt      String   @db.Text
  category    String?
  tags        String[] // Array of tags
  useCase     String?
  toolsNeeded String[] // Array of tools
  description String?  @db.Text
  usagePhase  String?  // foundation, build, enhance, refine, content
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([category])
  @@index([usagePhase])
}

model UsageStats {
  id        String   @id @default(cuid())
  userId    String
  promptId  String   // ID from Excel/JSON or custom prompt ID
  isCustom  Boolean  @default(false)
  usedAt    DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([promptId])
  @@index([usedAt])
}
